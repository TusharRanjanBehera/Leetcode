#include <iostream>

int main() {
    int rows = 3;
    int cols = 4;

    // Step 1: Allocate memory for the row pointers
    int** matrix = new int*[rows];

    // Step 2: Allocate memory for each row
    for (int i = 0; i < rows; ++i) {
        matrix[i] = new int[cols];
    }

    // Step 3: Initialize the matrix (example: fill with row*cols)
    for (int i = 0; i < rows; ++i) {
        for (int j = 0; j < cols; ++j) {
            matrix[i][j] = i * cols + j;
        }
    }

    // Step 4: Print the matrix
    std::cout << "Matrix:" << std::endl;
    for (int i = 0; i < rows; ++i) {
        for (int j = 0; j < cols; ++j) {
            std::cout << matrix[i][j] << " ";
        }
        std::cout << std::endl;
    }

    // Step 5: Free the memory
    for (int i = 0; i < rows; ++i) {
        delete[] matrix[i];
    }
    delete[] matrix;

    return 0;
}
